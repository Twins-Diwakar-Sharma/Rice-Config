wireless _first_ {
        format_up = "wifi %essid "
        format_down = "wifi down"
	color_good = "#ffff00"
	color_degraded = "#ff4500"
	color_bad = "#858bea"
}

ethernet _first_ {
        format_up = "LAN (%speed)"
        format_down = "LAN down"
	color_good = "#edfc11"
	color_degraded = "#edfca1"
	color_bad = "#879efd"
}

